# ==============================================
# CONFIGURACIÓN PARA PRODUCCIÓN - VPS
# ==============================================
NODE_ENV=production

# ==============================================
# CONFIGURACIÓN DEL BACKEND
# ==============================================
PORT=3025

# Orígenes permitidos para CORS en producción
ALLOWED_ORIGINS=http://TU_IP_VPS,https://TU_IP_VPS,https://tu-dominio.com

# JWT Secrets - ¡CAMBIA ESTOS VALORES!
JWT_SECRET=CAMBIA_ESTE_JWT_SECRET_POR_UNO_SEGURO
REFRESH_TOKEN_SECRET=CAMBIA_ESTE_REFRESH_TOKEN_SECRET_POR_UNO_SEGURO

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS Railway (Externa)
# ==============================================
DB_HOST=tu_host_railway
DB_PORT=tu_puerto_railway
DB_DATABASE=tu_bd_railway
DB_USERNAME=tu_usuario_railway
DB_PASSWORD=tu_password_railway
DB_ROOT_PASSWORD=tu_root_password_railway

# ==============================================
# CONFIGURACIÓN DEL FRONTEND
# ==============================================
# URL del API del backend (IP de tu VPS)
VITE_URL_API=http://TU_IP_VPS:3025

# ==============================================
# CONFIGURACIÓN DE EmailJS
# ==============================================
VITE_EMAILJS_SERVICE_ID=tu_service_id_real
VITE_EMAILJS_TEMPLATE_ID=tu_template_id_real
VITE_EMAILJS_PUBLIC_KEY=tu_public_key_real

# ==============================================
# CONFIGURACIÓN DE reCAPTCHA
# ==============================================
VITE_RECAPTCHA_SITE_KEY=tu_recaptcha_site_key_real
