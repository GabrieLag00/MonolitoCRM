# ==============================================
# CONFIGURACIÓN GENERAL
# ==============================================
NODE_ENV=development

# ==============================================
# CONFIGURACIÓN DEL BACKEND (Puerto 3025)
# ==============================================
PORT=3025

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# JWT Secrets (¡CAMBIA ESTOS EN PRODUCCIÓN!)
JWT_SECRET=tu_jwt_secret_aqui
REFRESH_TOKEN_SECRET=tu_refresh_token_secret_aqui

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS Railway (Externa)
# ==============================================
DB_HOST=tu_host_de_base_de_datos
DB_PORT=tu_puerto
DB_DATABASE=tu_nombre_de_bd
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password
DB_ROOT_PASSWORD=tu_root_password

# ==============================================
# CONFIGURACIÓN DEL FRONTEND (Puerto 5173)
# ==============================================
# URL del API del backend (para desarrollo local)
VITE_URL_API=http://localhost:3025

# ==============================================
# CONFIGURACIÓN DE EmailJS
# ==============================================
# Obtén estos valores de tu cuenta de EmailJS (https://www.emailjs.com/)
VITE_EMAILJS_SERVICE_ID=tu_service_id
VITE_EMAILJS_TEMPLATE_ID=tu_template_id
VITE_EMAILJS_PUBLIC_KEY=tu_public_key

# ==============================================
# CONFIGURACIÓN DE reCAPTCHA (Opcional)
# ==============================================
# Obtén estos valores de Google reCAPTCHA (https://www.google.com/recaptcha/)
VITE_RECAPTCHA_SITE_KEY=tu_recaptcha_site_key
